
# set arrowstyle = highlight
set hlsearch
set ignorecase
#set showdebugcommands
set tabstop=2
set winsplit=src_big
imap ; <ESC>
#set cgdbmodekey=;

# SPC : toggle breakpoint
# a : list args
map a iinfo<Space>args<CR><ESC>
# bt : backtrace
map bt ibt<CR><ESC>
# c : continue
map c :continue<CR>
# d : down
map d :down<CR>
# f : finish
map f :finish<CR>
# n : next
map n :next<CR>
# o : open file dialog
# r : run
map r :run<CR>
# s : step
map s :step<CR>
# t : temp Breakpoint
# u : up
map u :up<CR>
# U : until
map U :until<CR>
# v : info locals
map v iinfo<Space>locals<CR><ESC>
